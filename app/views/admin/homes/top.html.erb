<h1>Admin::Homes#top</h1>
<p>Find me in app/views/admin/homes/top.html.erb</p>

<div>
  <% # テスト用のログイン/ログアウトリンク %>

  <% if admin_signed_in? %>
    <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
  <% else %>
    <%= link_to "管理者ログイン", new_admin_session_path %>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>購入者</tr>
          <tr>購入日</tr>
          <tr>購入内容</tr>
          <tr>注文ステータス</tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M") %>
              <% end %>
            </td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>