<%= render "public/layouts/frame", type: :standard do %>
  <h3 class="marked-heading mx-4">管理者ログイン</h3>
  <div class="my-5 mx-4">
    <%= form_with(
      model: resource,
      url: session_path(resource_name),
      local: true,
      class: "my-3 d-lg-flex justify-content-lg-center"
    ) do |f| %>
      <div id="login-form">
        <div class="field form-group">
          <%= f.label "メールアドレス", class: "field-main-label" %>
          <%= f.email_field :email, class: "field-input form-control", placeholder: t("placeholder.email"), autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.label "パスワード", class: "field-main-label" %>
          <%= f.password_field :password, class: "field-input form-control", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
