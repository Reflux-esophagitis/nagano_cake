<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>ジャンル一覧・追加</h4>
      <div class="my-4">
        <%= render "admin/genres/form", genre: Genre.new, btn_text: "新規作成" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle"><%= genre.name %></td>
              <td class="align-middle text-center">
                <%= link_to edit_admin_genre_path(genre), class: "btn btn-success" do %>
                  編集する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
