<%= render "public/layouts/frame", type: :standard do %>
  <div class="row">
    <div class="col-lg-6">
      <h3 class="marked-heading">ジャンル一覧・追加</h3>
      <div class="my-4">
        <%= render "admin/genres/form", genre: @genre, btn_text: "新規作成" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "admin/genres/table_row", collection: @genres, as: :genre %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
