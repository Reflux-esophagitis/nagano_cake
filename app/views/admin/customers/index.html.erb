<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td>
                <%= link_to admin_customer_path(customer), class: "d-inline-block" do %>
                  <%= customer.full_name %>
                <% end %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <span class="customer-status <%= customer.is_active ? "active" : "inactive" %> d-inline-block font-weight-bold">
                  <%= customer.is_active ? "有効" : "退会" %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>