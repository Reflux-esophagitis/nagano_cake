<h1>Admin::Items#edit</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品編集</h2>
      <div>
      <%= form_with model:@item, url: admin_item_path do |f| %>
        <div class="field">
          <%= f.label :image, "商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="field">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction %>
        </div>
        <div class="field">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
        </div>
        <div class="field">
          <%= f.label :non_taxed_price, "税抜価格" %>
          <%= f.text_field :non_taxed_price %>円
        </div>
        <div class="field">
          <%= f.label :is_active, "販売ステータス" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", value: :true, class: "d-inline-block" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", value: :false, class: "d-inline-block" %>
        </div>
        <div>
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
