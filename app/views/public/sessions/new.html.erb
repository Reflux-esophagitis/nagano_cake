<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="marked-heading">ログイン</h3>
      <section class="my-5 mx-4">
        <h4 class="marked-heading">会員の方はこちらからログイン</h3>
        <%= form_with(
          model: resource,
          url: session_path(resource_name),
          local: true,
          class: "my-3 d-lg-flex justify-content-lg-center"
        ) do |f| %>
          <div id="login-form">
            <div class="field form-group">
              <%= f.label :email, "メールアドレス", class: "field-main-label" %>
              <%= f.email_field :email, class: "field-input form-control", placeholder: t("placeholder.email"), autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field form-group">
              <%= f.label :password, "パスワード", class: "field-main-label" %>
              <%= f.password_field :password, class: "field-input form-control", autocomplete: "current-password" %>
            </div>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <section>
        <h3 class="marked-heading">会員登録がお済みでない方</h3>
        <p>
          <%= render "public/shared/links" %>から新規登録を行ってください。
        </p>
      </section>
    </div>
  </div>
</div>