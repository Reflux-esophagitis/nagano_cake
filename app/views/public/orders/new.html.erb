<div class="contaier">
  <div class="row">
    <h3 class="offset-2">注文情報入力</h3>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
        <div class="payment_method">
          <h4>支払い方法</h4>
            <div class="ml-5">
              <%= f.radio_button :payment_method, 0 %>
              <%= f.label :payment_method, "クレジットカード" %>
            </div>
            <div class="ml-5">
              <%= f.radio_button :payment_method, 1 %>
              <%= f.label :payment_method, "銀行振込" %>
            </div>
        </div>
        <div class="addresses">
          <h4>お届け先</h4>
          <div class="customer_address ml-5">
            <%= f.radio_button :address_method, 0 %>
            <%= f.label :address_method, "ご自身の住所" %>
            <div class="customer_address ml-3">
              〒<%= current_customer.zip_code %>
              <%= current_customer.address %>  <br>
              <!--後からfull_nameをメソッド化する-->
              <%= current_customer.last_name %><%= current_customer.first_name %>
            </div>
          </div>
          <% unless @registered_addresses.empty? %>
            <div class="registered_address ml-5">
              <%= f.radio_button :address_method, 1 %>
              <%= f.label :address_method, "登録済住所から選択" %>
              <div>
                <%= f.collection_select :address, @registered_addresses, :id, "#{:zip_code + :address}" %>
              </div>
            </div>
          <% end %>
          <div class="new_address ml-5">
            <%= f.radio_button :address_method, 2 %>
            <%= f.label :address_method, "新しいお届け先" %>
            <div class="new_address_form ml-3">
              <div class="form-group">
                <%= f.label :zip_code, "郵便番号(ハイフン無し)" %>
                <%= f.text_field :zip_code %>
              </div>
              <div class="form-group">
                <%= f.label :address, "住所" %>
                <%= f.text_field :address %>
              </div>
              <div class="form-group">
                <%= f.label :name, "宛名" %>
                <%= f.text_field :name %>
              </div>
            </div>
          </div>
          <div class="text-center">
            <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>