<% case type %>
<% when :sidebar %>
  <div class="container-fluid my-4">
    <div class="row">
      <aside class="col-xl-2 mt-4">
        <%= render "public/homes/sidebar" %>
      </aside>
      <div class="col-xl-10">
        <%= yield %>
      </div>
    </div>
  </div>
<% when :standard %>
  <div class="container my-4">
    <div class="row">
      <div class="col mx-auto">
        <%= yield %>
      </div>
    </div>
  </div
<% end %>