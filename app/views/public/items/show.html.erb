<h1>Public::Items#show</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag @item.image, size: "100x100" %>
      <%= link_to item_path(@item) do %><%= @item.name %><% end %>
      <%= @item.introduction %>
      <%= @item.non_taxed_price %>
      <% if @item.is_active %>
         <p>販売中</p>
       <% else %>
         <p>販売停止</p>
      <% end %>
      <% if customer_signed_in? %>
        <%= form_with model: @cart_item do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, SELECTABLE_AMOUNT_RANGE, include_blank: "個数選択" %>
          <%= f.submit 'カートに追加' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
