<h1>Public::Items#index</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <% @items.each do |item| %>
        <%= image_tag item.image, size: "100x100" %>
        <%= link_to item_path(item) do %><%= item.name %><% end %>
        <%= item.introduction %>
        <%= item.non_taxed_price %>
        <%= item.is_active %>
      <% end %>
    </div>
  </div>
</div>
