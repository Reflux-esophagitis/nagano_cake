<%= render "public/layouts/frame", type: :standard do %>
  <h3 class="marked-heading">配送先登録 / 一覧</h3>
  <%= render "address_form", address: @address %>
  <table class="table table-bordered mt-5">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "addresses_table", collection: @addresses, as: :address %>
    </tbody>
  </table>
<% end %>
