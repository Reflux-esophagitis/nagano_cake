<div class="container">
  <div class="row">
    <h4 class="offset-1 p-4">配送先/一覧</h4>
  </div>
  <div>
    <%= form_with model: @address do |f| %>
      <div class="form-group row">
        <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "col-md-3"%>
        <%= f.text_field :zip_code, autofocus: true, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :address, "住所", class: "col-md-3" %>
        <%= f.text_field :address, class: "col-md-5" %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "宛名", class: "col-md-3" %>
        <%= f.text_field :name, class: "col-md-2" %>
        <%= f.submit "新規登録", class: "offset-3 btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "addresses_table", collection: @addresses, as: "address" %>
      </tbody>
    </table>
  </div>
</div>