<% flash.each do |message_type, message| %>
  <% case message_type %>
  <% when "notice" %>
    <div class="alert alert-success d-flex justify-content-center align-items-center">
      <div class="font-weight-bold">
        <i class="fa-solid fa-check mr-2"></i><%= message %>
      </div>
    </div>
  <% when "alert" %>
    <div class="alert alert-warning d-flex justify-content-center align-items-center">
      <div class="font-weight-bold">
        <i class="fa-solid fa-triangle-exclamation mr-2"></i><%= message %>
      </div>
    </div>
  <% end %>
<% end %>
